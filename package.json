        "@bytemd/plugin-math": "^1.21.0",
        "@bytemd/react": "^1.21.0",
        "ahooks": "^3.7.7",
        "antd": "^5.5.1",
        "axios": "^1.4.0",
        "bytemd": "^1.21.0",
        "classnames": "^2.3.2",
        "dayjs": "^1.11.7",
        "highlight.js": "^11.8.0",
        "hox": "^2.1.0",
        "juejin-markdown-themes": "^1.29.7",
        "katex": "^0.16.7",
