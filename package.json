        "stylelint-config-standard-less": "3.0.1",
        "stylelint-less": "3.0.1",
        "typescript": "^5.0.2",
        "vite": "^4.3.2",
        "vite-plugin-compression": "^0.5.1",
        "vite-plugin-imp": "^2.4.0",
        "vite-plugin-mock": "2.9.8",
        "vite-plugin-progress": "^0.0.7",
        "vitest": "^0.31.1"
